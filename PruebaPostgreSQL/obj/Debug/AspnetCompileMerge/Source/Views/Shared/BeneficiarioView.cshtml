                    @Html.ValidationMessageFor(model => model.parentesco, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-12 form-group has-feedback">
                <label class="control-label has-feedback-left">
                    Porcentaje <span class="required right">*</span>
                </label>
                <div class="has-feedback-left">
                    @Html.EditorFor(model => model.porcentaje, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.porcentaje, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
