        <li>
            <h3><a onclick="EliminarBeneficiario('@Model.identificadorbeneficiario');" style="cursor:pointer;"><i class="fa fa-trash"></i></a></h3>
        </li>
    </ul>
    <div class="clearfix"></div>
</div>
