@model Entities.Credito.ViewModels.Credito_BeneficiarioEditViewModel


@using (Html.BeginCollectionItem("ListaCreditoBeneficiarioEditViewModel"))
{
<div class="x_title" id="beneficiario_@Model.identificadorbeneficiario" name="beneficiario_@Model.identificadorbeneficiario">
