@{
	ViewBag.Title = "Index";}
<h2> Sucursal</h2>
@(Html.DevExtreme().DataGrid<Entities.Generales.ViewModels.SucursalViewModel>()
	.Columns(columns =>
	{
		columns.AddFor(m => m.Codigo);
		columns.AddFor(m => m.Nombre);
		columns.AddFor(m => m.Esactivo);
		columns.AddFor(m => m.Idcompania)
		.Lookup(lookup => lookup
			.DataSource(d => d.WebApi().Controller("CompaniasWebApi").Key("Id"))
			.DisplayExpr("Nombre")
			.ValueExpr("Id")
			);
	})
	.ColumnHidingEnabled(true)
	.Editing(e => e
	.Mode(GridEditMode.Row)
	.AllowAdding(true)
	.AllowUpdating(true)
	.AllowDeleting(true)
	).DataSource(d => d.WebApi()
	.Controller("SucursalWebApi")
	.InsertAction(true)
	.UpdateAction(true)
	.DeleteAction(true)
	.Key("Id")
	)
)
