@using PruebaPostgreSQL.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="animate form login_form">
    <section class="login_content">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "LoginForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <h1>Login Form</h1>
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div>
                <input type="text" class="form-control" id="username" name="username" placeholder="Usuario" required="" />
            </div>
            <div>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required="" />
            </div>
            <div>
                <input type="submit" class="btn btn-default" value="Log in" />
                <a class="reset_pass" href="#">Olvidaste tu password?</a>
            </div>
            <div class="clearfix"></div>
            <div class="separator">
                <p class="change_link">
                    Nuevo usuario?
                    <a href="#signup" class="to_register"> Crear Cuenta </a>
                </p>
                <div class="clearfix"></div>
                <br />
                <div>
                    <h1><i class="fa fa-pie-chart"></i> SIIAN!</h1>
                    <p>©2019 Todos los derechos reservados. Terminos y privacidad</p>
                </div>
            </div>
        }
    </section>
</div>
<div id="register" class="animate form registration_form">
    <section class="login_content">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "RegisterForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()
            <h1>Crear Cuenta</h1>
            <div>
                <input type="text" class="form-control" name="Username" placeholder="Usuario" required="" />
            </div>
            <div>
                <input type="email" class="form-control" name="Email" placeholder="Email" required="" />
            </div>
            <div>
                <input type="password" class="form-control" name="Password" placeholder="Password" required="" />
            </div>
            <div>
                <input type="password" class="form-control" name="ConfirmPassword" placeholder="Confirmar Password" required="" />
            </div>
            <div>
                <input type="submit" class="btn btn-default" value="Registro" />
            </div>
            <div class="clearfix"></div>
            <div class="separator">
                <p class="change_link">
                    Ya cuento con usuario ?
                    <a href="#signin" class="to_register"> Log in </a>
                </p>
                <div class="clearfix"></div>
                <br />
                <div>
                    <h1><i class="fa fa-pie-chart"></i> SIIAN!</h1>
                    <p>©2019 Todos los derechos reservados. Terminos y privacidad</p>
                </div>
            </div>
        }
    </section>
</div>

@section Scripts {

    <!-- Animate.css -->
    <link href="~/assets/vendors/animate.css/animate.min.css" rel="stylesheet">

    @Scripts.Render("~/bundles/jqueryval")
}