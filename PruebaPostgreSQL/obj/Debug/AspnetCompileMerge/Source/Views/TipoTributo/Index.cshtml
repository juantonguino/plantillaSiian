@{
	ViewBag.Title = "Index";}
<h2> TipoTributo</h2>
@(Html.DevExtreme().DataGrid<Entities.Contabilidad.ViewModels.TipoTributoViewModel>()
	.Columns(columns =>
	{
		columns.AddFor(m => m.Nombre);
		columns.AddFor(m => m.Esimpuesto);
		columns.AddFor(m => m.Esretencion);
		columns.AddFor(m => m.Esactivo);
	})
	.ColumnHidingEnabled(true)
	.Editing(e => e
	.Mode(GridEditMode.Row)
	.AllowAdding(true)
	.AllowUpdating(true)
	.AllowDeleting(true)
	).DataSource(d => d.WebApi()
	.Controller("TipoTributoWebApi")
	.InsertAction(true)
	.UpdateAction(true)
	.DeleteAction(true)
	.Key("Id")
	)
)
