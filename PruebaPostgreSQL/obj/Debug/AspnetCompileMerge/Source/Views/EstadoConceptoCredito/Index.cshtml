@{
	ViewBag.Title = "Index";}
<h2> EstadoConceptoCredito</h2>
@(Html.DevExtreme().DataGrid<Entities.Cartera.ViewModels.EstadoConceptoCreditoViewModel>()
    .Columns(columns =>
    {
        columns.AddFor(m => m.Nombre);
        columns.AddFor(m => m.Codigo);
        columns.AddFor(m => m.Esactivo);
