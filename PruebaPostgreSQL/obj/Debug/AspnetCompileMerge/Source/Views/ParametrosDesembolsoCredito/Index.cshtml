		.Lookup(lookup => lookup
			.DataSource(d => d.WebApi().Controller("ConceptosWebApi").Key("Id"))
			.DisplayExpr("Nombre")
			.ValueExpr("Id")
			);
	})
	.ColumnHidingEnabled(true)
	.Editing(e => e
	.Mode(GridEditMode.Row)
	.AllowAdding(true)
	.AllowUpdating(true)
	.AllowDeleting(true)
	).DataSource(d => d.WebApi()
	.Controller("ParametrosDesembolsoCreditoWebApi")
	.InsertAction(true)
	.UpdateAction(true)
	.DeleteAction(true)
	.Key("Id")
	)
